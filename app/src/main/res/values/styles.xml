<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="register_with">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/top_space</item>
        <item name="android:layout_marginRight">@dimen/lateral_space</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/blackText</item>
        <item name="android:lineSpacingExtra">@dimen/extra</item>
    </style>

    <style name="img1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/lateral_space</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/lateral_space</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/blackText</item>
        <item name="android:textSize">@dimen/title_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LLMiddle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/lateral_space</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="LLRegister">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="hex1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/blueLink</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="img2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitStart</item>
    </style>

    <style name="virtexp">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/lateral_space</item>
        <item name="android:layout_marginRight">@dimen/lateral_space</item>
        <item name="android:layout_marginTop">@dimen/top_space</item>
        <item name="android:textColor">@color/blackText</item>
    </style>

    <style name="hex2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/lateral_space</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/blueLink</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="directive">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/lateral_space</item>
        <item name="android:layout_marginRight">@dimen/lateral_space</item>
        <item name="android:layout_marginTop">@dimen/top_space</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="LLmax">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/ptrn4</item>
        <item name="android:orientation">vertical</item>
    </style>

</resources>
